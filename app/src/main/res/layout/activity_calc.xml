<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.usuario.apptextos.CalcActivity">

    <EditText
        android:id="@+id/ctN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/ctN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ctN1"
        android:layout_alignStart="@+id/ctN1"
        android:layout_below="@+id/ctN1"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/rtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ctN2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="0,0" />

    <Button
        android:id="@+id/btSomar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="SOMA"
        android:onClick="somar"
        android:layout_below="@+id/rtResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    <Button
        android:id="@+id/btSubtrair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btSomar"
        android:layout_alignRight="@+id/btSomar"
        android:layout_below="@+id/btSomar"
        android:layout_marginTop="23dp"
        android:text="Subtrair"
        android:onClick="subtrair"/>

    <Button
        android:id="@+id/btMultiplicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ctN2"
        android:layout_alignRight="@+id/ctN2"
        android:layout_alignTop="@+id/btSomar"
        android:text="Multiplicar"
        android:onClick="multiplicar"/>

    <Button
        android:id="@+id/btDividir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btSubtrair"
        android:layout_toEndOf="@+id/rtResult"
        android:layout_toRightOf="@+id/rtResult"
        android:text="Dividir"
        android:onClick="dividir"/>
</RelativeLayout>
